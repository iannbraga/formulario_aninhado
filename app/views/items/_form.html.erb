<div class="container mt-5">
  <%= form_with(model: item) do |form| %>
    <% if item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="col-12 p-2">
        <%= form.label :title, class: 'form-label' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="col-12 p-2">
        <%= form.label :price, class: 'form-label' %>
        <%= form.text_field :price, class: 'form-control' %>
      </div>


      <!--
        Dados de Inventory
      -->
      <%= form.fields_for :inventory do |inventory_form| %>
        <div class="field">
          <%= inventory_form.label :quantity, class: 'form-label' %>
          <%= inventory_form.number_field :quantity, id: :inventory_quantity, class: 'form-control' %>
        </div>
      <% end %>
      <!--
        Fim
      -->

      <div class="col-12 p-2">
        <%= form.check_box :active, class: 'form-check-input' %>
        <%= form.label :active, class: 'form-check-label' %>
      </div>


      <div class="col-12 p-2">
        <%= form.submit 'Criar produto', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>