<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-6">
        
        <h5 class="card-title align-middle">
          <%= link_to items_path, class: 'btn btn-outline-white' do %>
            <i class="bi bi-arrow-left"></i>
          <% end %>         
          <%= @item.title %></h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      </div>
      <div class="col-6">
        <div class="d-flex">
          <%= link_to edit_item_path(@item), class: 'btn btn-warning m-1' do %>
            <i class="bi bi-pencil"></i>
          <% end %>
          
          <%= button_to @item, method: :delete, class: 'btn btn-danger m-1' do %>
            <i class="bi bi-trash"></i>
          <% end %>
        </div>
      </div>

    </div>      
  </div>
</div>
